@model IEnumerable<eciWEB2016.Models.Staff>
@{
    ViewBag.Title = "Time_Headers";
    var grid = new WebGrid(source: Model,  canSort:false, columnNames: new[] { "ID", "firstName" });
}



<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <title></title>
</head>
<body>
    <header>
        <h1>All Staff Time Headers</h1>
        <ul class="right">
            <button onclick="location.href = '@Url.Action("Time_Headers", "Staff")' "> Refresh </button>
            <button onclick="location.href = '@Url.Action("Time_Sheet_Input", "Staff")' "> Close </button>
        </ul>
        <li>
            <label>Choose Staff</label><select>
                <OPTION>Select Staff Member</OPTION>
            </select>
        </li>
    </header>
    <nav class="head">
        <label>Staff ID:</label>
        <input type="text" size=5></input>
        <label>First Name:</label>
        <input type="text"></input>
        <label>Last Name:</label>
        <input type="text"></input>
        <label>Staff Status</label>
        <select>
            <option>A</option>
            <option>I</option>
        </select>
    </nav>
    <div class="main">
        <li class="left">
            Time Headers For This Staff Member
        </li>
        
        <div class="scroll">
            <div id="gridContent" style="font-family: Arial; padding: 10px;"> 
                 
                     @grid.GetHtml(tableStyle: "webgrid-table",
                                    headerStyle: "webgrid-header",                                   
                                    footerStyle: "webgrid-footer",
                                    alternatingRowStyle: "webgrid-alternating-row",
                                    selectedRowStyle: "webgrid-selected-row",
                                    rowStyle: "webgrid-row-style",


                    columns: grid.Columns(

                         grid.Column(columnName: "staffID", header: "Employee ID", style: "col1Width"),
                         grid.Column(columnName: "firstName", header: "First Name", style: "col2Width"),
                         grid.Column(columnName: "lastName", header: "Last Name", style: "col2Width"),
                         grid.Column("Select", style: "col2Width", format: (item) => item.GetSelectLink("Select"))

            ))

    <h2>Your Selected Row</h2>
         @if (grid.HasSelection)
         {
             var staff = (eciWEB2016.Models.Staff)grid.Rows[grid.SelectedIndex].Value;
                  <p><b> Position:</b> @staff.staffType </p>
                  <p><b> First Name:</b> @staff.firstName </p>
                  <p><b> Last Name:</b> @staff.lastName </p>
                  <p><b> Employee ID:</b> @staff.staffID.ToString() </p>
         }

            <table class="2">
                <thead>
                    <ul>
                        <li class="inline1">
                            @*Staff ID*@
                        </li>
                        <li class="inline2">
                            @*Week Ending*@
                        </li>
                    </ul>
                    <li>
                        <button onclick="location.href = '@Url.Action("Time_Sheets", "Staff")' ">
                            Time Sheets
                        </button>
                    </li>
                </thead>
                <tbody>
                    <tr></tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>



